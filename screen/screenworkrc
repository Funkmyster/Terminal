startup_message off
vbell off
activity "Activity in %t(%n)"
shelltitle "sh"
defscrollback 10000

#caption always "%{= bb}%{+b w}%n %h %=%t %c"
#hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"
hardstatus alwayslastline "%{=b}%{G} Screen(s): %{b}%w %=%{kG}%C%A  %D, %M/%d/%Y "

bind j focus down
bind k focus up
bind t focus top
bind b focus bottom

screen -t Bash	0
screen -t Vim	1
screen -t MySQL	2
screen -t Logs	3

select 0
